  pertama
  btn.onclick = function() {

    const nama = document.querySelector("#nama");
    const judul = document.querySelector("h1");
    let tampil = "belajar";

    judul.innerHTML = tampil + nama.value;

    tampil = "javascript";
    judul.innerHTML = tampil + nama.value;

}

