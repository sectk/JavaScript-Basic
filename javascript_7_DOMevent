  function tampil() {
    alert(document.querySelector("#nama").value );
    
    document.querySelector("#hasil").value = document.querySelector("#nama").value;
    
    document.querySelector("#para").innerText = document.querySelector("#nama").value;
    
}

btn.onclick = tampil;

